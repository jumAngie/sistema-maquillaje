@model IEnumerable<Maquillaje.WebUI.Models.ProductosViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.pro_Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pro_Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pro_StockInicial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pro_PrecioUnitario)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.pro_Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pro_Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pro_StockInicial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pro_PrecioUnitario)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.pro_Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.pro_Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.pro_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
